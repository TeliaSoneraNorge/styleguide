{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,

    // Let Babel emit the code, use TSC only for declarations.
    "emitDeclarationOnly": true,
    "declaration": true,

    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "jsx": "react",
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": [
    "src"
  ]
}
