:root {
    --icon-size: 26px;
}

.textbox-with-label {
    ::placeholder {
        color: var(--dark-grey);
    }

    &__input {
        border: 1px solid var(--dark-grey-2);
        color: var(--black);
        font: inherit;
        padding: 10px 15px;
        display: block;
        transition: all 0.3s;
        width: 100%;

        &:hover,
        &:focus,
        &:active {
            border: 1px solid var(--core-purple);
            outline: none;
        }

        &:disabled {
            border: 1px solid var(--dark-grey);
            color: var(--dark-grey);
            background: var(--white);
        }
    }

    &--with-error {
        .textbox-with-label__input {
            border-color: var(--dark-red);
        }
    }

    &--with-icon {
        .textbox-with-label__input-icon-wrapper {
            display: block;
            position: relative;
        }

        .textbox-with-label__input {
        }

        .textbox-with-label__button {
            background-color: transparent;
            border: none;
            padding: 10px 20px;
            position: absolute;
            right: 0;
            bottom: 0;


            &:hover {
                .textbox-with-label__icon {
                    background-position: calc(-var(--icon-size) * 2) 0px;
                }
            }

            &:active,
            &:focus {
                background-color: var(--core-purple);
                outline: none;

                .textbox-with-label__icon {
                    background-position: -var(--icon-size) 0px;
                }
            }
        }

        .textbox-with-label__icon {
            background-repeat: no-repeat;
            background-size: calc(var(--icon-size) * 3) var(--icon-size);
            display: block;
            height: var(--icon-size);
            width: var(--icon-size);
        }
    }
}