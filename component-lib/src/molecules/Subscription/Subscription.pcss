.subscription {
    align-items: flex-start;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    min-height: 280px;

    /* Teaser */
    &__teaser {
        max-width: 185px;
        text-align: center;
        width: 100%;
    }
    &__teaser-content {
        padding: 1rem 0;
    }
    &__name {
        font-size: 0.75rem;
        font-weight: 400;
        margin: 0;
        text-transform: uppercase;
    }
    &__data-amount {
        display: block;
        font-family: 'pebble';
        font-size: 4rem;
        line-height: 4rem;
        margin-top: 1rem;

        @media all and (min-width: 25.3125em) {
            font-size: 5rem;
            line-height: 5rem;
        }
    }
    &__data-unit {
        display: block;
        font-family: 'pebble';
        font-size: 2rem;
    }
    &__price {
        display: block;
        font-family: 'pebble';
        font-size: 2rem;
    }
    &__price-info {
        display: block;
        font-size: 0.75rem;
        font-weight: lighter;
    }
    &__additional-info {
        display: block;
        font-size: 0.75rem;
        margin: 1rem;

        &--bold {
            font-size: 0.9rem;
            font-family: "Helvetica Neue Medium";
        }
    }
    &__feature-info {
        display: block;
        font-size: 0.75rem;
        font-family: "Helvetica Neue Medium";
        margin-top: 1rem;
    }
    &__teaser-links {
        background-color: var(--white);
        display: none;
        padding: 0.5rem;
    }

    /* Features */
    &__features {
        align-self: center;
        display: none;
        padding: 0 0.5rem 0;
        text-align: center;

        .special-message, .button {
            display: none;
        }
    }
    &__highlighted-feature {
    }
    &__highlighted-feature-icon {
        height: 32px;
        width: 32px;

        &-large {
            height: 64px;
            width: 64px
        }
    }
    &__highlighted-feature-text {
        display: block;
        font-weight: lighter;
    }

    &--is-showing-features {
        width: 94%;

        .box__speech-bubble {
            margin: -7.5rem auto 1.5rem;
        }

        .subscription__teaser {
            width: 50%;

            @media all and (min-width: 25.3125em) {
                width: 60%;
            }
        }

        .subscription__features {
            display: inline-block;
            width: 50%;

            @media all and (min-width: 25.3125em) {
                width: 40%;
            }
        }
    }

    /* Expanded info */
    &__expanded-info {
        display: none;
        padding-top: 2rem;
        text-align: left;
        width: 100%;
    }

    &--is-standalone {
        border: none;
        cursor: default;
        margin: 0;

        .subscription__teaser {
            width: 185px;
        }

        .subscription__teaser-links {
            background-color: var(--white);
            display: block;
            padding: 0.5rem;
        }
    }

    &--is-broadband {
        &.box--is-expanded {
            @media all and (max-width: 37.5em) {
                .subscription__teaser {
                    width: 100%;
                    margin: 0 auto;
                }

                .subscription__features {
                    width: 100%;
                    margin-top: 2rem;
                }
            }

            @media all and (min-width: 37.5em) {
                .price-table {
                    width: 80%;
                }
            }
        }
    }
}

.box--purple {
    &.box--is-expanded,
    &.subscription--is-standalone {
        .subscription__teaser {
            border: 3px solid var(--core-purple);
        }
        .subscription__teaser-content {
            color: var(--white);
            background-color: var(--core-purple);
        }
    }
}

