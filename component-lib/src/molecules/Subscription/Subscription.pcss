            background-color: var(--black);
            color: var(--white);
        }
    }
}

.box--is-expanded {
    .box__speech-bubble {
        margin: 0 auto 1.5rem;

        @media all and (min-width: 25.3125em) {
            margin: -1rem auto 1.5rem;
        }
    }

    &.subscription {
        align-items: flex-start;
        margin: 1%;
        padding: 1rem;
        width: 98%;

        @media all and (min-width: 25.3125em) {
            padding: 2rem;
        }
    }
    .subscription__teaser {
        display: inline-block;
        width: 50%;
    }
    .subscription__teaser-links {
        display: block;
    }
    .subscription__data-amount {
        font-size: 5rem;
        line-height: 5rem;
    }
    .subscription__features {
        display: inline-block;
        flex-grow: 2;
        padding: 0 0.5rem;
        width: 50%;

        .special-message {
            display: block;
            margin-bottom: 0;
        }
        .button {
            display: inline-block;
            margin: 2rem 0 0 0;
        }
    }
    .subscription__expanded-info {
        display: block;
    }
}