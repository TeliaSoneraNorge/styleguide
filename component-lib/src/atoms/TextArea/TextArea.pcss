.textarea {
    border-radius: 0.25em;
    background-color: var(--light-grey);
    border: 1px solid var(--light-grey);
    color: var(--black);
    font: inherit;
    padding: 1rem;
    resize: none;
    width: 100%;
    vertical-align: top;

    ::placeholder {
        color: var(--darkest-grey);
    }

    &:hover,
    &:focus,
    &:active {
        border-color: var(--core-purple);
        outline: none;
    }

    &:disabled,
    &:disabled:hover,
    &:disabled:focus,
    &:disabled:active {
        border: 1px solid var(--light-grey);
        color: var(--darkest-grey);
    }

    &--margin-bottom {
        margin-bottom: var(--margin-bottom);
    }

    &--white {
        background-color: var(--white);
        border-color: var(--darkest-gray);

        &:disabled,
        &:disabled:hover,
        &:disabled:focus,
        &:disabled:active {
            border: 1px solid var(--darkest-grey);
            color: var(--darkest-grey);
        }
    }

    &--with-error,
    &--with-error:hover,
    &--with-error:focus,
    &--with-error:active {
        border-color: var(--dark-red);
    }
}