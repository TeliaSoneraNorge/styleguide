.telia-step-indicator-paging {
  display: block;

  &__list {
    display: flex;
    list-style: none;
    padding: 0;
    padding-bottom: 40px;
    width: min-content;
    position: relative;
    margin-left: 0.75em;
    margin-right: 0.75em;
    margin: 0 auto;
  }

  &__list-item {
    width: 150px;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;

    &--no-arrows {
      padding: 0;
    }
  }

  &__button {
    color: var(--black);
    border: 0;
    outline: 0;
    background: unset;
    cursor: pointer;
    z-index: 3;
    font-size: 14px;

    &--complete {
      color: #990ae3;
    }

    &--disabled {
      cursor: default;
    }

    &__text {
      display: flex;
      justify-content: center;
      align-items: center;

      border: 2px solid var(--core-purple);
      border-radius: 50%;

      height: 28px;
      width: 28px;

      &--active {
        border-color: var(--core-purple);
        background-color: var(--core-purple);
        color: var(--white);

        &:hover {
          cursor: default;
        }
      }

      & svg {
        width: 18px;
        height: 18px;
      }
    }

    &__title {
      position: absolute;
      left: 0;
      margin: 0;
      top: 36px;
      width: 150px;
      font-size: 16px;
      line-height: 1;
      font-family: 'TeliaSans-Regular';
      color: var(--black);

      & > span {
        display: inline-block;
        text-align: center;
      }

      &--active {
        font-family: 'TeliaSans-Medium';
      }
    }
  }

  &__arrow {
    position: absolute;
    width: auto;
    border: 0;
    line-height: 0;

    &--left {
    }

    &--right {
      position: relative;
      display: inline-block;
      width: 60px;
      margin-left: -60px;
    }

    &__button {
      position: relative;
      cursor: pointer;
      background: transparent;
      border: 0;
      padding: 0;
      z-index: 3;

      & > svg {
        width: 28px;
        height: 28px;
      }

      &--right {
        left: 12px;
        float: right;
      }

      &--left {
        left: -12px;
        float: left;
      }
    }
  }

  &__line {
    position: absolute;
    cursor: default;
    border-bottom: 2px dotted #606064;
    z-index: 1;
    top: calc(50% - 1px);
    left: 50%;
    width: calc(100% - 26px);
    margin-left: 14px;

    &--right {
      width: 60px;
      left: 0;
      margin: 0;
    }

    &--left {
      width: 60px;
      left: 2px;
      margin: 0;
    }

    &--complete {
      border-bottom-style: solid;
      border-bottom-color: var(--core-purple);
    }
  }

  &__transparent-layer {
    position: absolute;
    cursor: default;
    width: 60px;
    height: 100%;
    z-index: 2;

    &--left {
      background: var(--telia-step-indicator-line-transparent-gradient);
      transform: rotate(-180deg);
    }

    &--right {
      background: var(--telia-step-indicator-line-transparent-gradient);
    }
  }

  &__content {
    width: 100%;
    max-weight: 1044px;
    margin: 0 auto;
  }
}
