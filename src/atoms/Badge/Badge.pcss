.telia-badge {
  display: inline-flex;
  justify-content: center;
  align-items: center;

  min-width: 20px;
  height: 20px;
  border-radius: 10px;
  background-color: var(--core-purple-500);
  color: var(--white);
  &__ok {
    background-color: var(--green-500);
  }
  &__cautionÂ  {
    background-color: var(--orange-500);
  }
  &__warning {
    background-color: var(--red-500);
  }
  &__communication {
    background-color: var(--blue-500);
  }

  &__active {
    border: 2px solid var(--core-purple-200);
  }
  &__outlined {
    border: 1px solid var(--core-purple-500);
    background-color: white;
    color: var(--core-purple-400);
  }
}

.telia-badge--text {
  padding: 0 4px;
  font-size: 14px;
  line-height: 1;
}

.telia-badge__compact {
  min-width: 12px;
  height: 12px;
  border-radius: 6px;
}

.telia-badge__ok {
  &.telia-badge__active {
    border-color: var(--green-200);
  }
  &.telia-badge__outlined {
    border-color: var(--green-600);
    color: var(--green-600);
  }
}

.telia-badge__caution {
  &.telia-badge__active {
    border-color: var(--orange-200);
  }
  &.telia-badge__outlined {
    border-color: var(--orange-600);
    color: var(--orange-600);
  }
}

.telia-badge__warning {
  &.telia-badge__active {
    border-color: var(--red-200);
  }
  &.telia-badge__outlined {
    border-color: var(--red-600);
    color: var(--red-600);
  }
}

.telia-badge__communication {
  &.telia-badge__active {
    border-color: var(--blue-200);
  }
  &.telia-badge__outlined {
    border-color: var(--blue-600);
    color: var(--blue-600);
  }
}

.telia-badge--root {
  position: relative;
  display: inline-flex;
  .telia-badge {
    position: absolute;
    &__top-right {
      transform: translate(50%, -50%);
      top: 0;
      right: 0;
    }
    &__top-left {
      transform: translate(-50%, -50%);
      top: 0;
      left: 0;
    }

    &__bottom-right {
      transform: translate(50%, 50%);
      bottom: 0;
      right: 0;
    }

    &__bottom-left {
      transform: translate(-50%, 50%);
      bottom: 0;
      left: 0;
    }
  }
}
