.telia-tooltip__container {
  position: relative;
  display: inline-block;
}

.telia-tooltip {
  position: fixed;
  padding: 0.25rem 0.5rem;
  width: max-content;
  text-align: center;
  border: none;
  border-radius: 0.25rem;
  font-size: 14px;
  max-width: 200px;
  margin-top: 0.5rem;

  &--dark {
    background-color: var(--grey-900);
    border-color: var(--grey-900);
    color: white;
  }

  &--grey {
    background-color: var(--grey-100);
    border-color: var(--grey-100);
    color: var(--grey-900);
  }

  &--purple {
    background-color: var(--core-purple-100);
    border-color: var(--core-purple-100);
    color: var(--core-purple-500);
  }

}

.telia-tooltip__arrow {
  content: ' ';
  position: absolute;
  bottom: 100%; /* At the top of the tooltip */
  margin-left: -8px;
  border-width: 8px;
  border-style: solid;
  border-left-color: transparent;
  border-right-color: transparent;
  border-bottom-color: transparent;
  border-top-color: transparent;
}

.telia-tooltip--top > .telia-tooltip__arrow {
  left: 50%;
  top: 100%;
  border-top-color: inherit;
}

.telia-tooltip--top-start > .telia-tooltip__arrow {
  left: 80%;
  top: 100%;
  border-top-color: inherit;
}

.telia-tooltip--top-end > .telia-tooltip__arrow {
  left: 20%;
  top: 100%;
  border-top-color: inherit;
}

.telia-tooltip--right > .telia-tooltip__arrow {
  border-right-color: inherit;
  top: 6px;
  right: 100%;
}

.telia-tooltip--bottom > .telia-tooltip__arrow {
  left: 50%;
  border-bottom-color: inherit;
}

.telia-tooltip--bottom-start > .telia-tooltip__arrow {
  left: 80%;
  border-bottom-color: inherit;
}

.telia-tooltip--bottom-end > .telia-tooltip__arrow {
  left: 20%;
  border-bottom-color: inherit;
}

.telia-tooltip--left > .telia-tooltip__arrow {
  border-left-color: inherit;
  top: 6px;
  left: calc(100% + 8px);
}
