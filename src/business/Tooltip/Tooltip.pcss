.tooltip-container {
  position: relative;
  display: inline-block;
}

.tooltip {
  visibility: hidden;
  position: absolute;
  padding: 0.625rem;
  width: max-content;
  text-align: center;
  border: none;
  border-radius: 0.25rem;
  z-index: 1;
  top: 120%;

  &--dark {
    background-color: var(--grey-900);
    border-color: var(--grey-900);
    color: white;
  }

  &--grey {
    background-color: var(--grey-200);
    border-color: var(--grey-200);
    color: var(--grey-900);
  }

  &--purple {
    background-color: var(--core-purple-100);
    border-color: var(--core-purple-100);
    color: var(--core-purple-500);
  }

  &--top,
  &--top-start,
  &--top-end {
    top: auto;
    bottom: 120%;
  }

  &--top-start {
    right: 70px;
  }

  &--top-end {
    left: 70px;
  }

  &--right {
    left: 110%;
    top: 0%;
  }

  &--bottom-start {
    right: 60%;
  }

  &--bottom-end {
    left: 60%;
  }

  &--left {
    right: 110%;
    top: 0%;
  }
}

.tooltip-arrow {
  content: ' ';
  position: absolute;
  bottom: 100%; /* At the top of the tooltip */
  margin-left: -8px;
  border-width: 8px;
  border-style: solid;
  border-left-color: transparent;
  border-right-color: transparent;
  border-bottom-color: transparent;
  border-top-color: transparent;
}

.tooltip-container:hover .tooltip {
  visibility: visible;
}

.tooltip--top > .tooltip-arrow {
  left: 50%;
  top: 100%;
  border-top-color: inherit;
}

.tooltip--top-start > .tooltip-arrow {
  left: 80%;
  top: 100%;
  border-top-color: inherit;
}

.tooltip--top-end > .tooltip-arrow {
  left: 20%;
  top: 100%;
  border-top-color: inherit;
}

.tooltip--right > .tooltip-arrow {
  border-right-color: inherit;
  bottom: 30%;
  right: 100%;
}

.tooltip--bottom > .tooltip-arrow {
  left: 50%;
  border-bottom-color: inherit;
}

.tooltip--bottom-start > .tooltip-arrow {
  left: 80%;
  border-bottom-color: inherit;
}

.tooltip--bottom-end > .tooltip-arrow {
  left: 20%;
  border-bottom-color: inherit;
}

.tooltip--left > .tooltip-arrow {
  border-left-color: inherit;
  bottom: 30%;
  left: calc(100% + 8px);
}
