.accordion-flexible {
  box-sizing: border-box;
  position: relative;
  width: 100%;
  max-width: 40rem;
  border-radius: 3px;
  background-color: var(--white);
  box-shadow: 0px 1px 4px 0px rgba(0, 0, 0, 0.12);

  &__header-container {
    padding: 1.5rem 2rem;
    background: none;
    border: none;
    cursor: pointer;
    width: 100%;
    border: 3px solid transparent;
    border-bottom: 0;
    transition: border 150ms ease-out;
    padding: 1rem;
    margin: 0;

    background-color: var(--white);
    position: relative;
    cursor: pointer;
    width: 100%;
    padding-right: 2em;
  }

  &__header {
    height: 100%;
    width: 100%;
    margin: 0;
    padding: 1rem 0.75rem;
    background-color: var(--white);
    transition: border 150ms ease-out;

    &-content-right {
      display: flex;
      flex-direction: row-reverse;
    }

    &:hover,
    &:focus,
    &--expanded {
      outline: none;
      cursor: pointer;
      border: 3px solid var(--core-purple);

      ~ .subscription-accordion__expanded-info {
        border-left: 3px solid var(--core-purple);
        border-right: 3px solid var(--core-purple);
        border-bottom: 3px solid var(--core-purple);
      }
    }
  }

  &__header-row {
    display: flex;
    flex-direction: row;

    & > * {
      flex-basis: auto;
      flex-shrink: 1;
      flex-grow: 1;
    }

    & h2 {
      margin: 0;
      width: fit-content;
    }

    & svg {
      margin: 0;
      max-width: 32px;
      max-height: 32px;
    }
  }

  &__heading--right {
    display: block;
    text-align: right;
    min-width: 50px;
    &.line-through {
      text-decoration: line-through;
    }
  }

  &__arrow {
    fill: #222222;
    height: 1.2rem;
    width: 1.2rem;
    position: absolute;
    right: 0.5rem;
    top: 50%;
    pointer-events: none;
    transform: translateY(-50%);

    &--expanded {
      transform: rotate(180deg);
    }
  }

  &__disclaimers {
    & .accordion:last-of-type {
      margin-bottom: 0;
      border-bottom: none;
    }
  }

  &__expanded-info {
    display: flex;
    flex-direction: column;
    align-items: center;
    border-left: 3px solid transparent;
    border-right: 3px solid transparent;
    border-bottom: 3px solid transparent;
    transition: border 150ms ease-out;
    padding: 0rem 0.5rem 0.5rem 0.5rem;
  }
}

.accordion-flexible__heading--right.line-through {
  text-decoration: line-through;
}

.accordion-flexible__ingress-row-left {
  display: block;
  text-align: left;
  min-width: 150px;
}

.accordion-flexible__ingress-row-right {
  display: block;
  text-align: right !important;
  min-width: 150px;
}

@media screen and (max-width: 580px) {
  .accordion-flexible__ingress-row-right,
  .accordion-flexible__ingress-row-right {
    min-width: 140px;
  }
}

@media screen and (max-width: 480px) {
  .accordion-flexible__ingress-row-right,
  .accordion-flexible__ingress-row-right {
    min-width: 130px;
  }
}

@media screen and (max-width: 420px) {
  .accordion-flexible__ingress-row-right,
  .accordion-flexible__ingress-row-right {
    min-width: 120px;
  }
}

@media screen and (max-width: 380px) {
  .accordion-flexible__ingress-row-right,
  .accordion-flexible__ingress-row-right {
    min-width: 110px;
  }
}
