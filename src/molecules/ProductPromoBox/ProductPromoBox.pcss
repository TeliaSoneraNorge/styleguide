.product-promo-box-grid {
    display: flex;
    flex-flow: row wrap;
    justify-content: center;

    @media all and (min-width: 48em) {
        justify-content: space-between;

        .product-promo-box {
            margin-left: 0;
            margin-right: 0;
        }

        .product-promo-box {
            margin-bottom: 2rem;
        }
    }
}

.product-promo-box {
    display: flex;
    flex-flow: column;
    margin-left: auto;
    margin-right: auto;
    max-width: 100%;
    width: 370px;
    padding: 1.5rem;

    @media all and (min-width: 48em) {
        flex-flow: row;
        width: var(--width-medium);
        padding: 4rem;
    }

    /* Content: heading & description */
    &__image-container {
        display: block;
        margin: 1rem 1rem 2rem;

        @media all and (min-width: 48em) {
            margin: 0 3rem 0 0;
            width: 35%;
        }
    }
    &__image {
        display: block;
        margin: 0 auto;
        max-width: 200px;
        width: 100%;

        @media all and (min-width: 48em) {
            max-width: 100%;
        }
    }

    /* Content: heading & description */
    &__content-container {
        margin-bottom: var(--margin-bottom);
        width: 100%;

        @media all and (min-width: 48em) {
            margin-bottom: 0;
            width: 57%;
        }
    }
    &__product-name {
        margin: 0 0 5px;
        width: 100%;
    }
    &__description {
        margin-bottom: 1.5rem;
        width: 100%;
    }

    /* Price, Price-label & Action Button */
    &__price-and-action {
        border-top: 2px solid var(--grey);
        padding-top: 1rem;

        &-inline {
            @media all and (min-width: 48em) {
                display: flex;
                justify-content: space-between;
                width: 100%;

                .button {
                    flex: 0 0 37%;
                    align-self: flex-end;
                    margin-left: 1rem;
                    text-align: center;
                }
            }
        }
    }

    &__price-info {
    }
    &__price {
        font-family: 'pebble';
        font-size: 2rem;
        line-height: 1;
    }
    &__price-smallprint {
        font-size: 0.9rem;
        padding-top: 1rem;
    }
    &__text-instead-of-button {
        margin: 1rem 0 0;
    }

    /* Feature-circle / "speech bubble" */
    &--is-showing-feature {
        .product-promo-box__product-name {
            @media all and (min-width: 34.375em) {
                padding-right: 90px;
            }
        }
    }

    &--small {
        width: 370px;

        @media all and (min-width: 48em) {
            flex-flow: column;
            padding: 1.5rem;
            width: 48%;
        }

        .product-promo-box__image-container {
            @media all and (min-width: 48em) {
                margin: 1rem 1rem 2rem;
                width: auto;
            }
        }
        .product-promo-box__image {
            @media all and (min-width: 48em) {
                max-width: 200px;
            }
        }
        .product-promo-box__content-container {
            @media all and (min-width: 48em) {
                margin-bottom: 2rem;
                width: 100%;
            }
        }
        .product-promo-box__price-and-action {
            display: block;
        }
    }
}