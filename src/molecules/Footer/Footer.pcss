.telia-footer {
    &__container {
        margin-left: auto;
        margin-right: auto;
        padding: 1.5em 0 1.5em 0;
        max-width: 1244px;
        display: flex;
        justify-content: space-between;

        @media all and (max-width: 54em) {
            padding: 1em 0 1em 0;
            display: block;
            width: 100%;
        }
    }

    &__nav-column-top {
        line-height: 1.3em;
        margin-left: 1em;
        margin-right: 1em;
        flex-direction: column;
        width: 25%;
        text-align: left;

        @media all and (max-width: 54em){
            width: auto; 
            padding-top: 0.5em;
            padding-bottom: 0.5em;
            border-top: solid 1px var(--core-purple);
        }
    }

    &__nav-column-top:last-child {
        @media all and (max-width: 54em) 
        {
            border-bottom: solid 1px var(--core-purple);
        }
    }

    &__nav-column-bottom {
        line-height: 1.3em;
        margin: 0;
        padding-left: 1em;
        flex-direction: column;
        width: 25%;
        text-align: left;
        color: var(--white);

        p {
            margin:0;
            pointer-events: none;
            text-decoration:none; 
            color:inherit;
        }

        a {
            display: block;
            text-decoration: none;
        }

        @media all and (max-width: 54em){
            width: auto; 
            padding-top: 0.5em;
            padding-bottom: 0.5em;
        }
    }

    &__logo:hover {
        opacity: 0.7;
    }

    &__accordion {
        padding-left: 0;
        width: 100%;
        text-align: left;
        font-size: 1em;
        background-color: Transparent;
        border: none;
        line-height: 1.3em;

        div {
            a {
                display: block;
                text-decoration: none;
                line-height: 1.5rem
            }
        }
    }

    &__accordion-heading:hover {
        @media all and (max-width: 54em) {
            opacity: 0.7;
            cursor: pointer;
        }
    }

    &__accordian-chevron {
        display: none;

        @media all and (max-width: 54em) {
            display: inline-block;
            float: right;
            color: var(--core-purple);
        }
    }

    &__accordion-small-screen {
        display: none;
        
        @media all and (max-width: 54em){
            display: block;
        }
    }

    &__accordion-desktop {
        display: block;
        
        @media all and (max-width: 54em){
            display: none;
        }
    }

    &__nav-column-link-top:hover {
        opacity: 0.7;
    }

    &__nav-column-link-top:first-child {
        margin-top: 0.5em;
    }

    &__nav-column-link-bottom:hover {
        opacity: 0.7;
    }

    &__nav-column-link-bottom:first-child {
        margin: 0;
    }

    &__deep-purple {
        background-color: var(--core-purple-900);
    }

    &__purple {
        background-color: var(--core-purple-800);        
    }

    &__white {
        color: var(--white);
    }

    &__light-purple {
        color: var(--core-purple-400);

        @media all and (max-width: 54em) {
            color: var(--white);
        }
    }

    &__heading {
        display: inline-block;
        margin-top: 0;
        margin-bottom: 0;
        color: var(--white);
        font-weight: normal;
    }

    &__vertical-seperator-line {
        display: inline;
        margin-left: 0.6em; 
        padding-left: 0.6em;    
    }

    &__sosial-media-row {
        margin: 0;
        list-style-type: none;
        display: inline-block;
        padding-left: 1em;
        padding-right: 1em;
        border-right: solid 1px var(--white);
    }

    &__sosial-media-row:nth-child(3n+1) {
        padding-left: 0;
    }

    &__sosial-media-row:last-child {
        border: none;
    }

    &__social-media-icon { 
        font-size: 1.3em;
        transition: all .1s ease-in-out; 
    }
        
    &__social-media-icon:hover { 
        transform: scale(1.3); 
        
        @media all and (max-width: 54em) {
            transform: none;
            opacity: 0.7; 
        }
    }
}
