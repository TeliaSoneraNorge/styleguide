.step-by-step {
  display: flex;
  flex-wrap: wrap;
  list-style: none;
  margin: 0;
  padding: 0;
}

button.step-by-step__pebbles {
  border: none;
  background-color: transparent;
  padding: 0;
  height: 0;
}

.step-by-step:not(.step-by-step--interactive) {
  .step-by-step__content {
    display: none;
  }
}

.step-by-step__step-wrapper {
  position: relative;
  display: flex;
  flex: 1 1 100%;
  flex-wrap: wrap;

  &:not(:last-child):after {
    content: '';
    position: absolute;
    top: 4px;

    bottom: 0;
    height: 100%;
    width: 1px;
    border-left: 1px solid var(--grey);
  }
}

.step-by-step--dashed {
  .step-by-step__step-wrapper:not(:last-child):after {
    border-left: 1px dashed var(--grey);
  }
}

.step-by-step__circle {
  background-color: var(--light-grey);
  border-radius: 50%;
  border: 1px solid var(--grey);

  &--no-border {
    border: none;
  }
}
.step-by-step__pebbles {
  svg {
    z-index: 2;
    flex: 1 auto;
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;

    * {
      fill: var(--light-grey);
      stroke: var(--grey);
    }
  }
  & > * {
    z-index: 3;
  }
}

.step-by-step--interactive {
  .step-by-step__content {
    margin: -2rem 0 2rem 5.3rem;
  }
  .step-by-step__step {
    outline: none;
    text-decoration: none;

    &:not(&--highlighted) {
      cursor: pointer;

      &[class*='step-by-step__circle']:focus {
        border: 2px solid var(--core-purple);
      }

      &[class*='step-by-step__pebbles']:focus {
        path {
          stroke: var(--core-purple);
        }
      }

      &:focus > .step-by-step__number {
        line-height: 4.375rem;
      }
    }

    &--touched > .step-by-step__content {
      animation: step-by-step__height-close 500ms forwards;
    }

    &--opened > .step-by-step__content {
      visibility: visible;
      max-height: none;
      animation: step-by-step__height-open 500ms forwards;
    }
    &--closed > .step-by-step__content {
      overflow: hidden;
      max-height: 0;
      visibility: collapse;
      transition: visibility 500ms;
      animation-fill-mode: forwards;
    }
  }
}

.step-by-step__step {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 1; /*To make the circle lay on top of the vertical border */

  &--highlighted {
    &[class*='step-by-step__circle'] {
      background-color: var(--core-purple);
    }
    &.step-by-step__pebbles svg * {
      stroke: var(--core-purple);
      fill: var(--core-purple);
    }

    > .step-by-step__number,
    > .step-by-step__text {
      color: var(--white);
    }
  }
}

.step-by-step__image {
  border-radius: 50%;
}

.step-by-step__number {
  color: var(--core-purple);
  font-family: 'TeliaSans';
  font-weight: 700;
  font-size: 3rem;

  @media screen and (max-width: 30em) {
    font-size: 2rem;
  }
}

.step-by-step__text {
  flex: 6 0 0;

  padding-left: 1rem;
  padding-bottom: 2rem;

  display: flex;
  flex-direction: column;
}

.step-by-step__content {
  padding-left: 0.5rem;
  padding-bottom: 2rem;
  width: 100%;
  @media screen and (max-width: 30em) {
    margin-left: 0;
  }
}

.step-by-step__heading {
  margin: 0 0 0.5rem;
}

.step-by-step__description {
}

.step-by-step--lg {
  .step-by-step__step-wrapper {
    min-height: calc(75px + 3rem);
  }
  .step-by-step__pebbles,
  .step-by-step__circle {
    height: 75px;
    width: 75px;
  }
  .step-by-step__circle {
    .Icon,
    .step-by-step__icon,
    .step-by-step__image {
      height: 45px;
      width: 45px;
    }
  }
  .step-by-step__step-wrapper:after {
    left: 2.3rem;
  }
}

.step-by-step--md {
  .step-by-step__step-wrapper {
    min-height: calc(48px + 2rem);
  }
  .step-by-step__pebbles,
  .step-by-step__circle {
    height: 48px;
    width: 48px;
  }
  .step-by-step__circle {
    .Icon,
    .step-by-step__icon,
    .step-by-step__image {
      height: 28px;
      width: 28px;
    }
  }
  .step-by-step__step-wrapper:after {
    left: 24px;
  }
}

.step-by-step--sm {
  .step-by-step__step-wrapper {
    min-height: calc(40px + 2rem);
  }
  .step-by-step__pebbles,
  .step-by-step__circle {
    height: 40px;
    width: 40px;
  }
  .step-by-step__circle {
    .Icon,
    .step-by-step__icon,
    .step-by-step__image {
      height: 24px;
      width: 24px;
    }
  }
  .step-by-step__step-wrapper:after {
    left: 20px;
  }
}

.step-by-step--xs {
  .step-by-step__step-wrapper {
    min-height: calc(32px + 2rem);
  }
  .step-by-step__pebbles,
  .step-by-step__circle {
    height: 32px;
    width: 32px;
  }
  .step-by-step__circle {
    .Icon,
    .step-by-step__icon,
    .step-by-step__image {
      height: 20px;
      width: 20px;
    }
  }
  .step-by-step__step-wrapper:after {
    left: 16px;
  }
}

.step-by-step__step-wrapper:last-child {
  .step-by-step__text {
    padding-bottom: 0;
  }
}
.step-by-step__text + .step-by-step__content {
  padding-top: 2rem;
}

@keyframes step-by-step__height-open {
  0%,
  1% {
    max-height: 0;
  }
  99% {
    max-height: 1000px;
  }
  to {
    max-height: none;
  }
}
@keyframes step-by-step__height-close {
  0% {
    max-height: none;
  }
  1% {
    max-height: 1000px;
  }
  99% {
    max-height: 0;
  }
  to {
    max-height: 0;
    padding: 0;
  }
}
