.banner {
  max-width: var(--width-small);
  margin: 0 auto;

  display: flex;
  flex-flow: column-reverse;

  @media all and (min-width: 60rem) {
    display: flex;
    flex-flow: row;
    max-width: var(--width-large);

    &--reverse {
      flex-flow: row-reverse;
    }
  }

  &__col {
    position: relative;
    flex-basis: 50%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 0;
  }

  &--background-grey {
    background-color: var(--light-grey);
  }

  &--background-white {
    background-color: var(--white);
  }

  &__content {
    padding: 1rem;
    line-height: 1.5;
    @media all and (min-width: 60rem) {
      padding: 2.9375rem;
      height: 350px;
      max-height: 350px;
      overflow: hidden;
    }

    .paragraph {
      overflow: hidden;
      line-height: 1.5rem;
      max-height: 8rem;
      -webkit-box-orient: vertical;
      display: block;
      display: -webkit-box;
      overflow: hidden !important;
      text-overflow: ellipsis;
      -webkit-line-clamp: 4;
    }
  }

  &__image {
    width: 100%;
    height: 100%;
    object-fit: cover;

    @media all and (min-width: 60rem) {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }
  }
}
