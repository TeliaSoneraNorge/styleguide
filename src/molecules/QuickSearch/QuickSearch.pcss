@import '../../colors.pcss';
.telia-quick-search {
  &--animated {
    width: 3rem;
    transition: width 0.3s ease-out;
    .telia-textfield {
      &__input {
        width: 0rem !important;
        height: 0rem !important;
        padding: 0rem;
      }
      &__content {
        height: 44px;
        border: none !important;
      }
      &__rightContent {
        width: 3rem;
        border-top-left-radius: 6rem;
        border-bottom-left-radius: 6rem;
        border-top-right-radius: 6rem;
        border-bottom-right-radius: 6rem;
      }
      &--white {
        border: none !important;
      }
    }
  }

  &--animated:focus-within {
    width: 18rem;
    .telia-textfield {
      &__input {
        height: 44px !important;
        width: 200px !important;
        padding: 0.75rem;
      }

      &__rightContent {
        border-top-right-radius: 6rem;
        border-bottom-right-radius: 6rem;
        border-top-left-radius: 0rem;
        border-bottom-left-radius: 0rem;
      }
    }
  }

  .telia-textfield {
    inputÂ  {
      font-family: 'TeliaSans-Regular', 'Helvetica Neue', Helvetica, Arial, sans-serif;
      border-radius: 100px;
      border: none;
      transition: border 200ms ease, background-color 200ms ease;
    }
  }

  .telia-textfield--white {
    input {
      border: none;
    }
  }

  .telia-textfield__content {
    border-radius: 100px;
    transition: box-shadow 150ms ease-in-out;
  }

  .telia-textfield--grey {
    .telia-textfield__content {
      border: 1px solid var(--grey-200);
    }
  }

  .telia-textfield__content:focus-within {
    box-shadow: 0 1px 2px var(--grey-300);
    background-color: white;
  }

  .telia-textfield__leftContent {
    border-top-left-radius: 100px;
    border-bottom-left-radius: 100px;
    transition: border 200ms ease, background-color 200ms ease;
  }

  .telia-textfield__status,
  .telia-textfield__rightContent {
    border-top-right-radius: 100px;
    border-bottom-right-radius: 100px;
    transition: border 200ms ease, background-color 200ms ease;
  }

  .telia-textfield:hover {
    .telia-textfield__leftContent {
      background-color: white;
    }

    .telia-textfield__rightContent {
      background-color: white;
    }

    input {
      background-color: var(--white);
      border: none;
    }
  }

  .telia-textfield:focus-within {
    .telia-textfield__leftContent {
      background-color: white;
    }

    input {
      background-color: var(--white);
      border: none;
    }
    .telia-textfield__rightContent {
      background-color: white;
    }
  }

  .telia-textfield--prepended {
    input {
      border-top-left-radius: 0px;
      border-bottom-left-radius: 0px;
    }
  }
  .telia-textfield--appended {
    input {
      border-top-right-radius: 0px;
      border-bottom-right-radius: 0px;
    }
  }
}
