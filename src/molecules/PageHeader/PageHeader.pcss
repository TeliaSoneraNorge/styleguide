@import "../../colors.pcss";

:root {
    --cart-count-size: 1.5rem;
    --cart-count-size-small: 1rem;
    --logo-size-small-screens: 80px;
    --logo-size-large-screens: 120px;
    --icon-size-small: 24px;
    --icon-size-large: 32px;
}

.page-header {
    border-bottom: 1px solid var(--darkest-grey);
    background-color: var(--white);
    display: flex;

    &__icon-box {
        background: none;
        border: none;
        display: inline-block;
        font-size: 0.75rem;
        letter-spacing: 1px;
        text-decoration: none;

        &:hover {
            cursor: pointer;
        }
    }
    &__icon-box-icon {
        display: block;
        height: var(--icon-size-small);
        margin: 0.2rem 0 0 0;
        width: var(--icon-size-small);

        @media screen and (min-width: 42em) {
            height: var(--icon-size-large);
            margin: 0 auto 0.5rem auto;
            width: var(--icon-size-large);
        }
    }
    &__icon-box-text {
        display: none;
        color: var(--black);
        text-transform: uppercase;

        @media screen and (min-width: 42em) {
            display: block;
        }
    }
    &__site-logo {
        flex: 0 0 120px;
        padding: 1.4rem;
        order: 2;
        display: inline-block;

        @media screen and (min-width: 42em) {
            align-self: center;
        }

        &:focus {
            outline: none;
            background: var(--core-purple);

             > .page-header__site-logo-img {
                display: none;
            }

            > .page-header__site-logo-img--inverted {
                display: block;
            }
        }
    }

    &__site-logo-img {
        display: block;
        height: 100%;
        max-width: var(--logo-size-small-screens);

        &--inverted {
            display: none;
        }

        @media screen and (min-width: 42em) {
            max-width: var(--logo-size-large-screens);
        }
    }

    &__site-nav {
        order: 1;
        flex: 1;
    }
    &__menu-button {
        flex: 1;
        height: 100%;
        padding: 1em 2em;
        text-transform: uppercase;

        &:hover {
            > .page-header__menu-button-image {
                outline: none;
                * {
                    fill: var(--core-purple);
                }
            }

            > .page-header__icon-box-text {
                color: var(--core-purple);
            }
        }

        &:focus {
            outline: none;
            background: var(--core-purple);

            > .page-header__menu-button-image {
                outline: none;
                * {
                    fill: var(--white);
                }
            }

            > .page-header__icon-box-text {
                color: var(--white);
            }
        }
    }

    &__site-tools {
        align-items: center;
        display: flex;
        justify-content: flex-end;
        order: 2;
        text-align: right;
        flex: 1;
    }
    &__cart-button {
        display: flex;
        align-items: center;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: center;

        background-color: transparent;
        border: 0;
        color: var(--black);
        font-size: 0.75rem;
        letter-spacing: 1px;
        padding: 1rem 1rem;
        position: relative;
        text-decoration: none;
        text-transform: uppercase;
        height: 100%;

        &:hover {
            > .page-header__cart-button-text {
                color: var(--core-purple);
            }

            > .page-header__cart-button-image * {
                fill: var(--core-purple);
            }
        }

        &:focus {
            outline: none;
            background: var(--core-purple);

            > .page-header__cart-button-text {
                color: var(--white);
            }

            > .page-header__cart-button-image * {
                fill: var(--white);
            }

            > .page-header__cart-item-count {
                background-color: white;
                color: var(--core-purple);
            }
        }

        &-text {
            display: none;
            flex: 0 0 100%;
            text-align: center;

            @media screen and (min-width: 42em) {
                display: block;
            }
        }
    }
    &__cart-button-image {
        display: block;

        height: var(--icon-size-small);
        width: var(--icon-size-small);

        @media screen and (min-width: 42em) {
            height: var(--icon-size-large);
            width: var(--icon-size-large);
        }
    }
    &__cart-item-count {
        background-color: var(--core-purple);
        border-radius: calc(var(--cart-count-size-small) / 2);
        color: white;
        display: inline-block;
        font-size: calc(var(--cart-count-size-small) / 2);
        font-weight: bold;
        height: var(--cart-count-size-small);
        line-height: var(--cart-count-size-small);
        text-align: center;
        position: absolute;
        top: 35%;
        right: 15%;
        width: var(--cart-count-size-small);

        &-text {
            display: none;
        }

        @media screen and (min-width: 42em) {
            border-radius: calc(var(--cart-count-size) / 2);
            font-size: calc(var(--cart-count-size) / 2);
            height: var(--cart-count-size);
            line-height: var(--cart-count-size);
            width: var(--cart-count-size);

            right: 30%;
            top: 10%;

            &-text {
                display: inline;
            }
        }
    }
    &__log-in-button {
        display: flex;
        align-items: center;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: center;

        color: var(--black);
        font-size: 0.75rem;
        letter-spacing: 1px;
        padding: 1rem 1rem;
        text-decoration: none;
        text-transform: uppercase;
        height: 100%;

        &-text {
            display: none;
            flex: 0 0 100%;
            text-align: center;
        }

        &-icon {
            display: block;

            height: var(--icon-size-small);
            width: var(--icon-size-small);

            @media screen and (min-width: 42em) {
                height: var(--icon-size-large);
                width: var(--icon-size-large);
            }
        }

        &:hover {
            > .page-header__log-in-button-text {
                color: var(--core-purple);
            }

            > .page-header__log-in-button-icon * {
                fill: var(--core-purple);
            }
        }

        &:focus {
            outline: none;
            background: var(--core-purple);

            > .page-header__log-in-button-text {
                color: var(--white);
            }

            > .page-header__log-in-button-icon * {
                fill: var(--white);
            }
        }

        @media screen and (min-width: 42em) {
            > .page-header__log-in-button-text {
                display: block;
            }
        }
    }
    &__my-account-button {
        margin-left: 1rem;
    }
    &__user-name {
        display: none;
        text-transform: none;

        @media screen and (min-width: 42em) {
            display: block;
        }
    }
}