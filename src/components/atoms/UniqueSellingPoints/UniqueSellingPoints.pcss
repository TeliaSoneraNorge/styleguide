:root {
    --icon-size-small: 20px;
}

.unique-selling-points {
    background-color: white;
    display: flex;
    flex-flow: row wrap;
    justify-content: space-between;
    margin: 0 auto var(--margin-bottom);
    width: 100%;
    padding: 0;

    @media all and (min-width: em(768)) {
        justify-content: center;
    }

    &__block {
        flex-basis: 100%;
        flex-grow: 0;
        flex-shrink: 0;
        list-style: none;
        margin-bottom: 20px;

        @media all and (min-width: em(450)) {
            flex-basis: 47%;
        }

        @media all and (min-width: em(768)) {
            flex-basis: 22%;
            margin: 0 20px 20px 0;

            &:last-child {
                margin: 0 0 20px 0;
            }
        }
    }

    &__icon {
        height: var(--icon-size-small);
        margin-bottom: 0;
        width: var(--icon-size-small);

        @media all and (min-width: em(450)) {
            margin-bottom: 5px;
        }
    }
}
