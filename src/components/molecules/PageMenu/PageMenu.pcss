:root {
    --menu-icon-size-small: 16px;
    --menu-icon-size-large: 22px;
}

.page-menu {
    background-color: var(--white);
    border-right: 5px solid var(--core-purple);
    display: none;
    height: 100%;
    left: 0;
    overflow-x: hidden;
    top: 0;
    transition: 0.5s;
    max-width: 405px;
    width: 100%;
    z-index: 4;

    &--expanded {
        display: block;
    }

    &--fixed {
        position: fixed;
    }

    &__search {
        margin-bottom: 2rem;
        padding: 0 1rem;
    }

    &__log-out-button {
        display: inline-block;

        margin-left: 1.875rem;
        margin-top: 1.625rem;

        font-size: 0.9rem;
    }

    &__icon-box {
        background: none;
        border: none;
        display: inline-block;
        font-size: 0.75rem;
        letter-spacing: 1px;
        text-decoration: none;

        &:hover {
            cursor: pointer;
        }
    }

    &__icon-box-icon {
        display: block;
        margin: 0 auto 0.5rem auto;
        width: var(--menu-icon-size-small);
        height: var(--menu-icon-size-small);

        @media screen and (min-width: 42em) {
            width: var(--menu-icon-size-large);
            height: var(--menu-icon-size-large);
        }
    }

    &__icon-box-text {
        color: var(--black);
        text-transform: uppercase;
    }

    &__item {
        margin: 0;
        padding: 0;

        &-icon {
            background: transparent url('/public/icons/ico_linkarrow_black.svg') no-repeat;
            background-size: 1.25rem 1.25rem;

            width: var(--menu-icon-size-large);
            height: var(--menu-icon-size-large);

            display: inline-block;
            margin-top: 0.2rem;
            margin-left: auto;
        }

        &-list {
            margin: 0;
            padding: 0;
            list-style: none;
        }

        &:first-child {
            .page-menu__item-link {
                padding-top: 2.5625rem;
            }
        }

        &-link {
            color: var(--black);
            display: flex;
            padding: 1.0625rem 2rem 0.875rem 1.875rem;
            text-decoration: none;
            transition: 0.3s;

            font-size: 1.2em;

            &:hover {
                > .page-menu__item-text {
                    text-decoration: underline;
                }
            }
        }

        &-notification {
            background: var(--dark-red);
            border-radius: 100%;

            font-size: 0.9em;
            text-align: center;
            color: var(--white);

            display: inline-block;
            width: 1.375rem;
            height: 1.375rem;
            margin-left: 9px;
        }

        &--logged-in {
            border-bottom: 1px dashed var(--grey);
            background: var(--light-grey);

            &:last-child {
                border-bottom: 1px solid var(--dark-grey);

                .page-menu__item-link {
                    padding-bottom: 1.6875rem;
                }
            }

            &:only-child {
                .page-menu__item-link {
                    padding-top: 1.6875rem;
                }
            }
        }
    }

    &__top-panel {
        padding: 1.3125rem 1.8125rem 0.6875rem 1.4375rem;
        background: var(--light-grey);
        border-bottom: 1px solid var(--dark-grey);
    }

    &__search-button {
        float: right;
    }


    &__overlay {
        background-color: rgba(0, 0, 0, 0.9);
        height: 100%;
        left: 0;
        opacity: 0;
        overflow-y: auto;
        overflow-x: hidden;
        position: fixed;
        text-align: center;
        top: 0;
        width: 0;
        z-index: 3;

        &--active {
            opacity: 0.5;
            width: 100%;
        }
    }
}